<% layout('layouts/boilerplate') %>
<h1>All Slopes</h1>
<div>
  <a href="/slopes/new">Add slope</a>
</div>

<% for (let slope of slopes) {%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" src="<%= slope.image %> " />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= slope.title %></h5>
        <p><h5 class="card-text"><%= slope.description %></h5></p>
        <p class="card-text">
          <small class="text-muted"><%= slope.location %> </small>
        </p>
        <a class="btn btn-primary" href="/slopes/<%= slope._id %> ">View <%= slope.title %> </a>
      </div>
    </div>
  </div>
</div>
<% } %>
