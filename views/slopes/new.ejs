<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Slope</h1>
  <div class="col-6 offset-3">
    <form action="/slopes" method="POST" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          autocomplete="off"
          class="form-control"
          type="text"
          id="title"
          name="slope[title]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          autocomplete="off"
          class="form-control"
          type="text"
          id="location"
          name="slope[location]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Image Url</label>
        <input
          autocomplete="off"
          class="form-control"
          type="text"
          id="image"
          name="slope[image]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="difficulty">Difficulty</label>
        <div class="input-group">
          <span class="input-group-text" id="difficulty-label">10</span>
          <input
            type="text"
            class="form-control"
            id="difficulty"
            placeholder="0"
            aria-describedby="difficulty-label"
            name="slope[difficulty]"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Description</label>
        <textarea
          autocomplete="off"
          class="form-control"
          type="text"
          id="description"
          name="slope[description]"
          required
        ></textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Add Slope</button>
      </div>
    </form>
    <a href="/slopes">All slopes</a>
  </div>
</div>

<script>
  // Example starter JavaScript for disabling form submissions if there are invalid fields
  (function () {
    "use strict";

    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    const forms = document.querySelectorAll(".validated-form");

    // Loop over them and prevent submission
    Array.from(forms).forEach(function (form) {
      form.addEventListener(
        "submit",
        function (event) {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }

          form.classList.add("was-validated");
        },
        false
      );
    });
  })();
</script>
