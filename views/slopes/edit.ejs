<% layout('layouts/boilerplate') %>
<h1>Edit Slope</h1>
<form action="/slopes/<%= slope._id %>?_method=PUT" method="POST">
  <div>
    <label for="title">Title</label>
    <input
      type="text"
      id="title"
      name="slope[title]"
      value="<%= slope.title %> "
    />
  </div>
  <div>
    <label for="location">Location</label>
    <input
      type="text"
      id="location"
      name="slope[location]"
      value="<%= slope.location %> "
    />
  </div>
  <button>Update Slope</button>
</form>
<a href="/slopes/<%= slope._id %> ">Back to Slope</a>
